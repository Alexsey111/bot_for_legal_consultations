# .env.example - Шаблон конфигурации (БЕЗ секретов)

# Telegram Bot Token (получить у @BotFather)
TELEGRAM_TOKEN=your_bot_token_here

# OpenAI API Key (для LLM)
OPENAI_API_KEY=your_openai_key_here

# Redis (опционально, по умолчанию localhost)
REDIS_URL=redis://localhost:6379/0

# Database (SQLite; путь должен совпадать с volume ./data в docker-compose)
DATABASE_URL=sqlite+aiosqlite:///./data/legal_bot.db

# Prometheus Metrics
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Session Settings
SESSION_TIMEOUT_MINUTES=30
SESSION_MAX_HISTORY=5

# Cleanup
CLEANUP_THRESHOLD_DAYS=365

# Production (опционально): PRODUCTION=true и ENCRYPTION_KEY=... для шифрования PII
# ENCRYPTION_KEY=base64_key_from_data/.encryption_keys.json
